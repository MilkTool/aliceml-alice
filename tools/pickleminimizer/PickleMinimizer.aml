import structure Minimizer from "x-alice:/lib/system/Minimizer"
import structure UnsafeComponent from "x-alice:/lib/system/UnsafeComponent"

structure PickleMinimizer =
  struct
      fun minimize s = 
	  let
	      val c = UnsafeComponent.load s
	  in
	      Minimizer.minimize c;
	      UnsafeComponent.save (s, c)
	  end
  end
