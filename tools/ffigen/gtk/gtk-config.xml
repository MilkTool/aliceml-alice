  <accept>guint32</accept>
  <accept>gboolean</accept>
  <accept>gfloat</accept>
  <accept>gdouble</accept>
  <accept>gchar</accept>
  <accept>gpointer</accept>

  <rename><from>_GdkColor#x#</from><to>GdkColor#x#</to></rename>
  <accept>Gdk##</accept>
  <accept>GDK##</accept>
  <accept>gdk_##</accept>
 
  <accept>Gtk##</accept>
