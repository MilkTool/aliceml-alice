#!/bin/sh

OZVERSION=1.1.1
OZHOME=/opt/mozart-$OZVERSION

howcalled=$0

if test -z "${STOCKHOME}"
then
  dir=`dirname $howcalled`
  STOCKHOME=`(cd $dir; cd ..; /bin/pwd)`
fi

PATH=$OZHOME/bin:$STOCKHOME/bin:$PATH
OZ_LOAD=prefix=x-alice\\:=$STOCKHOME/:prefix=http\\://www.mozart-oz.org/home-$OZVERSION/=$OZHOME/

export OZHOME PATH OZ_LOAD

exec ozengine "$@"
