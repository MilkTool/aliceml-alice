import signature BATCH_COMPILER from "RECURSIVE_COMPILER-sig"
import signature COMPILE_SERVER from "COMPILE_SERVER-sig"

functor MkCompileServer(BatchCompiler : BATCH_COMPILER) : COMPILE_SERVER =
struct
    val compile     = BatchCompiler.main
