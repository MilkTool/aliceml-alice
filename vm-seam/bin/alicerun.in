set -e

prefix=@prefix@
exec_prefix=@exec_prefix@
datadir=@datadir@
libdir=@libdir@

seamlibdir=@seamlibdir@

set -e

cmd="$0"

find_in () {
    search_for=$1
    found_in=""
    shift
    for d in "$@"; do
	if test -f "$d/${search_for}" -o -h "$d/${search_for}"; then
	    found_in=$d && break
	fi
    done
    if test -z "${found_in}"; then
	echo "$cmd: error: could not find ${search_for} in either of" >&2
	for d in "$@"; do echo "  $d" >&2; done
	exit 1
    fi
    echo "${found_in}"
}

abs_path () {
    case "$1" in
	/*|?:*)
	    echo "$1"
	    ;;
	*)
	    echo "$(pwd)/$1"
	    ;;
    esac
}

if test -z "${ALICE_HOME}"; then
    dir=$(dirname "$0")
    dir=$(dirname "$dir")
    ALICE_HOME=$(find_in alice.dll "${datadir}/@PACKAGE@" "$PROGRAMFILES/Alice" "$dir")
fi

ALICE_HOME=$(abs_path "$ALICE_HOME")

case $(uname) in
    CYGWIN*)
	PATH="$ALICE_HOME:$PATH"
	ALICE_HOME=`cygpath -m "$ALICE_HOME"`
	;;
    *)
	LD_LIBRARY_PATH="${ALICE_HOME}${LD_LIBRARY_PATH:+:}${LD_LIBRARY_PATH}"
	export LD_LIBRARY_PATH
	;;
esac

add_to_alice_load () {
    ALICE_LOAD="${ALICE_LOAD}${ALICE_LOAD:+@CACHESEP@}$1"
}

add_to_alice_load "cache=${HOME}/.@PACKAGE@/cache"
add_to_alice_load "cache=${datadir}/@PACKAGE@/cache"
add_to_alice_load "cache=${libdir}/@PACKAGE@/cache"

add_to_alice_load "pattern=?{x}=?{x}.stc"
add_to_alice_load "pattern=?{x}=?{x}.dll"

export ALICE_HOME ALICE_LOAD

## To use the GUI debugger on Windows/Cygwin:
#echo run alice "$@"
#exec insight seam.exe

## To use the debugger on Unix:
#(echo "break Base.cc:22"; echo "tty /dev/pts/4"; echo run alice "$@"; cat) |
#exec gdb seam

exec seam alice "$@"
