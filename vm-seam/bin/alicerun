#!/bin/sh

howcalled=$0

if test -z "${STOCKHOME}"
then
  dir=`dirname $howcalled`
  STOCKHOME=`(cd $dir; cd ..; /bin/pwd)`
fi

case `uname -s` in
    CYGWIN*)
	sep=\;
        STOCKHOME=`cygpath -w "$STOCKHOME"`
	;;
    *)
	sep=:
	;;
esac

ALICE_LOAD=pattern=x-alice:/?{x}="$STOCKHOME"/?{x}.stc${sep}pattern=?{x}=?{x}.stc

export STOCKHOME ALICE_LOAD

#(echo "break Base.cc:19"; echo run "$@"; cat)|
#exec gdb -nw "$STOCKHOME"/stow.exe

exec "$STOCKHOME"/stow.exe "$@"
