SEAMTOOL = seamtool

ifeq ($(WINDOWS), 1)
EXTRA_LDFLAGS = --image-base=1010000
LIBS = -lwsock32
else
EXTRA_LDFLAGS = 
LIBS = -lm
endif

INCLUDES = -I.

CXX = $(SEAMTOOL) compile
LD = $(SEAMTOOL) link

MAKEDEPEND = $(SEAMTOOL) makedepend $(INCLUDES)
