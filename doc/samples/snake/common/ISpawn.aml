fun ispawn f a =
    (* spawn application and error handler.
       return unit (directly)
     *)
    (spawn ((f a) 
      handle List.Empty =>
            (TextIO.output (TextIO.stdErr,
                "ispawn failed with List.Empty exception \n");
            OS.Process.exit OS.Process.failure)
      
        |    e => 
        (TextIO.output (TextIO.stdErr, 
            "ispawn failed with exception " ^ exnName e ^ "\n");
         OS.Process.exit OS.Process.failure));
    ())
     
