##

BUILD2ALICESOURCES = $(filter %.aml, $(BUILD2SOURCES))
BUILD3ALICESOURCES = $(filter %.aml, $(BUILD3SOURCES))

depend: $(BUILD1DIRS) $(BUILD2DIRS) $(BUILD3DIRS) \
	$(BUILD2SOURCES) $(BUILD3SOURCES)
