M4INCL  = $(SRCDIR)/macros.m4
SRCDIR  = @srcdir@

CLASSROOT  = ../../classes/
RUNTIME = de/uni_sb/ps/dml/runtime/
rt      = de.uni_sb.ps.dml.runtime.

