import signature COMPONENT_MANAGER
    from "x-alice:/lib/system/COMPONENT_MANAGER-sig"

signature REMOTE =
    sig
	type ticket = string

	exception Ticket
	exception Protocol of int * string

	(*--** once-only offer and proxy *)
	val proxy: ('a -> 'b) -> 'a -> 'b
	val offer: Package.package -> string              (* Pickle.Sited *)
	val take: ticket -> Package.package               (* Ticket *)

	(*--** functor Proxy(signature S functor F(): S): fct(S) -> S*)

	functor Offer(signature S structure X: S):
		(val ticket: ticket)                      (* Pickle.Sited *)

	functor Take(val ticket: ticket signature S): S   (* Ticket *)

	functor Execute(val host: string
			signature RESULT
			functor Start(ComponentManager:
				      COMPONENT_MANAGER): RESULT): RESULT
    end
