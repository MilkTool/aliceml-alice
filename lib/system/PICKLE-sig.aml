signature PICKLE =
sig
    exception Sited

    val extension : string

    val save : string * package -> unit				(* Io *)
    val load : string -> package				(* Io *)
    val saveVal : string * Package.val_package -> unit		(* Io *)
    val loadVal : string -> Package.val_package			(* Io *)

    functor Save(val file : string signature S structure X : S) : any (* Io *)
    functor Load(val file : string signature S) : S		(* Io *)

    functor SaveVal(val file : string type t val x : t) : any	(* Io *)
    functor LoadVal(val file : string type t) : (val x : t)	(* Io *)
end
