import structure TextIO from "TextIO"

signature PRINT =
sig
    val printWidth :	int ref

    val printVal :	'a -> unit
    val printType :	'a -> unit
    val outputVal :	TextIO.outstream * 'a * int -> unit
    val outputType :	TextIO.outstream * 'a * int -> unit

    exception Type
    val register : ('a -> string) -> unit
end
