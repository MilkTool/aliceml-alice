import signature RESOLVER_HANDLER from "RESOLVER_HANDLER-sig"

signature RESOLVER =
    sig
	structure Handler: RESOLVER_HANDLER

	type resolver
	type t = resolver

	datatype result =
	    FILE of string
	  | STRING of string

	val new: {name: string, handlers: Handler.t list,
		  memoize: bool} -> resolver
	val localize: resolver -> string -> result option
    end
