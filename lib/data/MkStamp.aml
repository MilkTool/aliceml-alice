import signature STAMP from "STAMP-sig"

functor MkStamp() :> STAMP =
struct
    type stamp   = int
    type t       = stamp

    val r        = ref 0
    val lock     = Lock.lock()

    val reset    = Lock.sync lock (fn() => r := 0)
    val new      = Lock.sync lock (fn() => (r := !r + 1; !r))

    val toString = Int.toString
    val compare  = Int.compare
    val equal    = op =

    fun hash n   = n
end
